<!DOCTYPE html>

<html>

    <head>
        <meta name="viewport" content="width=device-width" />
        <meta charset="utf-8" />
        @* here we will be getting the variable "Title" from the ViewData of each page, 
            so the title can be diff on each page *@
        <title>@ViewData["Title"]</title>
        <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
        <link href="~/css/styles.css" rel="stylesheet" />
        <link rel="icon" type="image/x-icon" href="img/good-icon.webp" />
    </head>

    <body>

        <nav>
            @* This is the way to show paths of these diff views *@
            <a asp-controller="extra" asp-action="Index">Home</a>
            <a asp-controller="extra" asp-action="GradeCalc">Grade Calculator</a>
        </nav>

        <div>
            @RenderBody()
        </div>

        <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
        <script src="~/lib/jquery/jquery-3.6.3.min.js"></script>

    </body>

</html>
